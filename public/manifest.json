{
  "manifest_version": 3,
  "name": "Tab Insights",
  "description": "Shows insights about tabs.",
  "version": "0.1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "build/icon-128.png"
  },
  "options_ui": {
    "page": "build/options.html"
  },
  "action": {
    "default_name": "Tab Insights",
    "default_icon": "icon48.png",
    "default_popup": "build/popup.html"
  },
  "background": {
    "service_worker": "build/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "unlimitedStorage",
    "storage"
  ]
}
