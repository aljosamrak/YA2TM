{
  "manifest_version": 3,
  "name": "YATM",
  "description": "Tab manager",
  "version": "0.1.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "build/options.html"
  },
  "action": {
    "default_name": "YATM",
    "default_icon": "icon-48.png",
    "default_popup": "build/popup.html"
  },
  "background": {
    "service_worker": "build/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "storage"
  ]
}
