{
  "name": "Tab Insights",
  "description": "Shows insights about tabs.",
  "manifest_version": 3,
  "version": "0.1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_name": "Tab Insights",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  // "browser_action": {
  //   "default_icon": {
  //     "16": "icon16.png",
  //     "48": "icon48.png"
  //   },
  //   "default_popup": "popup.html"
  // },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  // "content_scripts": [
  //   {
  //     "matches": [
  //       "*://*/*"
  //     ],
  //     "js": [
  //       "content.js"
  //     ]
  //   }
  // ],
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "unlimitedStorage",
    "storage" //TODO remove after midration to indexDB
  ]
